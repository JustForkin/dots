filetype *.sfs FUSE_MOUNT2|sshfs %PARAM %DESTINATION_DIR
filetype *.desktop gov %f &
filetype *.fig xfig %f 2>/dev/null &
filetype *.heprep hv %f &
filetype *.prim dawn %f 2> /dev/null &
filetype *.root root -l %f
filetype *.sc sc %f
filetype *.ps,*.ps.gz,*.eps open, gv %f &, display %f &
filetype *.pdf open, cygstart,mimeopen,xdg-open,xpdf %f &
filetype *.dvi xdvi %f 2>/dev/null &
filetype *.html,*.htm w3m %f
filetype *.o nm %f | less
filetype *.pro qtcreator %f &
filetype *.png,*.jpeg,*.jpg,*.PNG,*.JPG,*.gif open,cygstart,mimeopen,xdg-open,display %f
filetype *.doc,*.ppt,*.xls,*.docx,*.pptx,*.xlsx open,cygstart,mimeopen,xdg-open
" must be the last to cover things not covered above
" this will result in ignoring 'vi[x]cmd' option
