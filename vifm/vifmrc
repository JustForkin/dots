only
colorscheme solarized
set viewcolumns=-{name},10{perms},8{size},16{mtime}
set timefmt=%y/%m/%d\ %H:%M
set wildmenu
set wildstyle=popup
set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
set ignorecase
set smartcase
set incsearch
set statusline="  Hint: %z%= %A %10u:%-7g %15s %20d  "

mark 8 ~/github/diary/2018/ 02
mark a ~/rdlab/teaching/Adv.Res.Ana/18SP README.md
mark d ~/Dropbox/ computer/
mark e ~/rdlab/teaching/Exp.Mod.Phys.I/18 README.md
mark g ~/github/ dots/
mark h ~/ mail/
mark n ~/rdlab/experiment/NICE/ log/
mark o ~/overleaf/
mark p ~/github/physino/ tags/
mark r ~/rdlab/ tools

filetype *.sfs FUSE_MOUNT2|sshfs %PARAM %DESTINATION_DIR
filetype *.desktop gov %f &
filetype *.fig xfig %f 2>/dev/null &
filetype *.heprep hv %f &
filetype *.prim dawn %f 2> /dev/null &
filetype *.root root -l %f
filetype *.sc sc %f
filetype *.ps,*.ps.gz,*.eps open -a Preview.app, gv %f &, display %f &
filetype *.dvi xdvi %f 2>/dev/null &
filetype *.html,*.htm w3m %f
filetype *.o nm %f | less
filetype *.pro qtcreator %f &
" must be the last to cover things not covered above
" this will result in ignoring 'vi[x]cmd' option
filetype * open,cygstart,mimeopen,xdg-open

nnoremap S :sort<cr>
nnoremap s :!screen 1<cr>
nnoremap q :quit!<cr>
nnoremap o :!screen vim %f<cr>

" vim: filetype=vim :
