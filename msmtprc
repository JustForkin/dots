user jing.liu
# get password from ~/.netrc
from jing.liu@usd.edu
auth on
tls on
tls_trust_file /etc/pki/ca-trust/extracted/pem/tls-ca-bundle.pem
# ca-certificates has to be installed to have the above certificate.
